<h1>Listing cinemas</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cinemas.each do |cinema| %>
  <tr>
    <td><%= cinema.title %></td>
    <td><%= cinema.location %></td>
    <td><%= link_to 'Show', cinema %></td>
    <td><%= link_to 'Edit', edit_cinema_path(cinema) %></td>
    <td><%= link_to 'Destroy', cinema, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

