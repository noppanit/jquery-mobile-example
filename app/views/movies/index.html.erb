<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Stars</th>
    <th>Rate</th>
    <th>Total time</th>
    <th>Showtime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.stars %></td>
    <td><%= movie.rate %></td>
    <td><%= movie.total_time %></td>
    <td><%= movie.showtime %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

